<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .wrapper {
            padding: 1.5rem 3rem 0.5rem 3rem;
            width: 100%;
            height: 100%;
            display: flex;
            flex: 1;
            flex-direction: column;
            justify-content: space-around;
        }

        .detailsGrid {
            display: grid;
            grid-template-columns: 1fr 5fr;
            border-radius: 5px;
            box-shadow: 2px 2px 5px #aaa;
            padding: 0.5rem 1.5rem 1.5rem 1rem;
            grid-row-gap: 0.5rem;
            grid-column-gap: 2rem;
        }

        .game {
            color: #9C9C9C;
        }

        img {
            width: 100%;
        }

        .cardInformation {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .cardOptions {
            display: flex;
            flex-direction: row;
            gap: 3.5rem;
        }

        .cardOptions > div > div, .cardVariants > div {
            justify-self: end;
            font-weight: bold;
            text-transform: uppercase;
        }

        .addCardToDeckContainer {
            align-self: center;
        }

        .usersLists {
            display: flex;
            justify-content: space-around;
        }
    </ui:style>
    <g:HTMLPanel styleName="{style.wrapper}">
        <div class="{style.detailsGrid}">
            <p class="{style.game}">Game:
                <span ui:field="cardGame"/>
            </p>
            <h1 ui:field="cardName"/>
            <g:Image ui:field="cardImage"/>
            <div class="{style.cardInformation}">
                <div ui:field="cardDescription"/>
                <div class="{style.cardOptions}">
                    <div ui:field="variantsDiv" class="{style.cardVariants}">Variants:</div>
                </div>
            </div>
        </div>
        <g:HTMLPanel styleName="{style.addCardToDeckContainer}" ui:field="addCardToDeckContainer"/>
        <g:HTMLPanel styleName="{style.usersLists}" ui:field="userLists"/>
    </g:HTMLPanel>
</ui:UiBinder>