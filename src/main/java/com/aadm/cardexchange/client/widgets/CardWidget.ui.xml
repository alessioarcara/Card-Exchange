<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .card {
            display: flex;
            flex-direction: column;
            width: 16rem;
            min-height: 250px;
            border-radius: 12px;
            background-color: #e8e8e8;
            box-shadow: 2px 2px 5px #a8a8a8;
            padding: 1rem;
            gap: 1rem;
            align-items: center;
            justify-content: space-between;
        }

        .name {
            color: #222;
            font-size: 1.1em;
            font-weight: bold;
        }

        .firstRow {
            display: flex;
            width: 100%;
            justify-content: space-around;
        }

        .categories {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
            font-size: 0.9em;
            color: #222;
            text-align: right;
        }

        .button {
            background-color: #555;
            color: white;
            border: none;
            cursor: pointer;
            height: 25px;
            line-height: 25px;
            align-self: center;
            text-align: center;
            border-radius: 10px;
            width: 60%;
        }

        .variants {
            display: flex;
            flex-wrap: wrap;
            width: 100%;
            height: 48px;
            align-content: space-between;
            font-size: 0.9em;
            color: #444;
            text-align: center;
            font-weight: bold;
            text-transform: uppercase;
        }

        .variants > div {
            height: 24px;
            width: 50%;
        }
    </ui:style>
    <g:HTMLPanel>
        <div class="{style.card}">
            <div class="{style.name}" ui:field="nameDiv"/>
            <div class="{style.firstRow}">
                <g:Image ui:field="image"/>
                <div>
                    <div class="{style.categories}" ui:field="categoriesDiv"/>
                </div>
            </div>
            <div class="{style.variants}" ui:field="variantsDiv"/>
            <g:PushButton styleName="{style.button}" ui:field="detailsButton">Open Details</g:PushButton>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>